<Window x:Class="QuanLyThuVien.GUI.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyThuVien.GUI"
        mc:Ignorable="d"
        Title="Đăng nhập hệ thống" Height="500" Width="850"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F0F2F5">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF4A90E2" Offset="0"/>
                    <GradientStop Color="#FF357ABD" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="THƯ VIỆN SỐ" Foreground="White" FontSize="36" FontWeight="ExtraBold" HorizontalAlignment="Center"/>
                <TextBlock Text="Hệ thống quản lý sách thông minh" Foreground="#E0E0E0" FontSize="16" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Background="White" Padding="40">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="ĐĂNG NHẬP" FontSize="28" FontWeight="Bold" Foreground="#333" Margin="0,0,0,30" HorizontalAlignment="Center"/>

                <TextBlock Text="Tên đăng nhập" Margin="0,0,0,5" Foreground="#666"/>
                <Border BorderBrush="#DDD" BorderThickness="0,0,0,2" Margin="0,0,0,20">
                    <TextBox x:Name="txtUser" BorderThickness="0" Height="35" VerticalContentAlignment="Center" FontSize="14"/>
                </Border>

                <TextBlock Text="Mật khẩu" Margin="0,0,0,5" Foreground="#666"/>
                <Border BorderBrush="#DDD" BorderThickness="0,0,0,2" Margin="0,0,0,30">
                    <PasswordBox x:Name="txtPass" BorderThickness="0" Height="35" VerticalContentAlignment="Center" FontSize="14"/>
                </Border>

                <Button x:Name="btnLogin" 
                        Content="Đăng Nhập" 
                        Height="45" 
                        Background="#4A90E2" 
                        Foreground="White" 
                        FontWeight="Bold" 
                        FontSize="16"
                        Cursor="Hand"
                        IsDefault="True"
                        Click="btnLogin_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <TextBlock Text="Quên mật khẩu?" Foreground="#4A90E2" Margin="0,20,0,0" HorizontalAlignment="Center" Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>