<Window x:Class="QuanLyThuVien.GUI.FormMuonTra"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản Lý Mượn Trả" Height="400" Width="500">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="QUẢN LÝ MƯỢN TRẢ SÁCH" FontSize="20" HorizontalAlignment="Center" FontWeight="Bold" Margin="0,0,0,20"/>

            <Label Content="Mã Độc Giả:"/>
            <TextBox x:Name="txtMaDocGia" Margin="0,0,0,10" TextChanged="txtMaDocGia_TextChanged"/>

            <Label Content="Mã Sách:"/>
            <TextBox x:Name="txtMaSach" Margin="0,0,0,10"/>

            <Label Content="Số lượng mượn:"/>
            <TextBox x:Name="txtSoLuong" Margin="0,0,0,10"/>

            <Label Content="Ngày trả dự kiến:"/>
            <DatePicker x:Name="dpNgayTra" Margin="0,0,0,20"/>

            <UniformGrid Columns="2">
                <Button Content="Xác nhận Mượn" Click="BtnMuon_Click" Height="35" Margin="5" Background="LightBlue"/>
                <Button Content="Xác nhận Trả" Click="BtnTra_Click" Height="35" Margin="5" Background="LightGreen"/>
            </UniformGrid>

            <TextBlock x:Name="lblThongBao" Foreground="Red" Margin="0,10,0,0" TextWrapping="Wrap" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>