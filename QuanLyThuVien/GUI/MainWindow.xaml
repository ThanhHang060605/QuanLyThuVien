<Window x:Class="QuanLyThuVien.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hệ thống Quản lý Thư viện" Height="750" Width="1250"
        WindowStartupLocation="CenterScreen" Background="#F4F7F9">

    <Window.Resources>
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#D1D8DD"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="10,5,10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3D5061"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="LogoutButtonStyle" TargetType="Button" BasedOn="{StaticResource SidebarButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E74C3C"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#2C3E50">
            <Grid>
                <StackPanel Margin="0,20,0,0">
                    <Border Width="80" Height="80" Background="#34495E" CornerRadius="40" Margin="0,0,0,10">
                        <TextBlock Text="LIB" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24" FontWeight="Bold"/>
                    </Border>
                    <TextBlock Text="MENU HỆ THỐNG" Foreground="White" HorizontalAlignment="Center" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,30"/>

                    <Button Style="{StaticResource SidebarButtonStyle}" Content="Trang Chủ"/>
                    <Button Style="{StaticResource SidebarButtonStyle}" Content="Quản Lý Sách"/>
                    <Button Style="{StaticResource SidebarButtonStyle}" Content="Quản Lý Độc Giả"/>
                    <Button Style="{StaticResource SidebarButtonStyle}" Content="Mượn - Trả Sách"/>
                </StackPanel>

                <Button x:Name="btnLogout" Style="{StaticResource LogoutButtonStyle}" 
                        Content="Đăng Xuất" VerticalAlignment="Bottom" Margin="10,0,10,30" Click="btnLogout_Click"/>
            </Grid>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="White">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" Color="#DDE4EB" ShadowDepth="2" Opacity="0.4"/>
                </Border.Effect>
                <Grid Margin="25,0">
                    <TextBlock Text="HỆ THỐNG QUẢN LÝ THƯ VIỆN" VerticalAlignment="Center" FontSize="18" FontWeight="Bold" Foreground="#2C3E50"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <TextBlock Text="Chào mừng Admin!" Foreground="#7F8C8D" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Margin="25">
                <Border Background="White" CornerRadius="15">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" Color="#E0E5E9" ShadowDepth="1" Opacity="0.3"/>
                    </Border.Effect>
                    <Grid>
                        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>

                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Image Source="https://cdn-icons-png.flaticon.com/512/2232/2232688.png" Width="100" Height="100" Margin="0,0,0,20" Opacity="0.2"/>
                            <TextBlock Text="Chào mừng bạn trở lại!" FontSize="26" FontWeight="Light" Foreground="#BDC3C7"/>
                            <TextBlock Text="Chọn một chức năng bên trái để bắt đầu" Foreground="#D1D8DD" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>